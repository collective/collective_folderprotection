<div class="context-pw-protected" tal:condition="view/context_pw_protected">
  <div class="alert alert-warning" role="alert">
    <div>
      <span tal:condition="not:view/folder_pw_protected">This folder is currently password protected.</span>
      <span tal:condition="view/folder_pw_protected">The folder holding this item is currently password protected.</span>
    </div>
  </div>
</div>
<div class="parent-pw-protected"
     tal:define="folder_protected nocall:view/parent_pw_protected"
     tal:condition="folder_protected">
  <div class="alert alert-warning" role="alert">
    <div>
      <span>A parent folder is password protected, click <a tal:attributes="href folder_protected/absolute_url">here</a> to go to it.</span>
    </div>
  </div>
</div>
